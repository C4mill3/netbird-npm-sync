services:
  npm:
    image: 'jc21/nginx-proxy-manager:latest'
    container_name: 'npm'
    ...
    healthcheck:
      test: ['CMD', '/usr/bin/check-health']
      interval: '10s'
      timeout: '3s'

  netbird-sync:
    image: 'ghcr.io/c4mill3/netbird-npm-sync:latest'
    container_name: 'netbird-sync'
    restart: on-failure:3
    volumes:
      - './config.yaml:/app/config.yaml:ro'
    depends_on:
      npm: